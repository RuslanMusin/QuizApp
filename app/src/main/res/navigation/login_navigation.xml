<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/login_navigation" app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment" android:name="com.example.quiz.ui.login.fragments.login.LoginFragment"
              android:label="LoginFragment">
        <action android:id="@+id/signUpAciton" app:destination="@id/signUpFragment"/>
        <action android:id="@+id/loginAction" app:destination="@+id/navigationActivity"
                app:enterAnim="@anim/slide_in_right" app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left" app:popExitAnim="@anim/slide_out_right"/>
        <argument android:name="argument" app:argType="string" android:defaultValue="default"/>
    </fragment>
    <fragment android:id="@+id/signUpFragment"
              android:name="com.example.quiz.ui.login.fragments.signup.SignUpFragment"
              android:label="SignUpFragment">
        <action android:id="@+id/action_signUpFragment_to_navigationActivity" app:destination="@id/navigationActivity"/>
        <action android:id="@+id/action_signUpFragment_to_loginFragment2" app:destination="@id/loginFragment"/>
    </fragment>
    <activity android:id="@+id/navigationActivity"
              android:name="com.example.quiz.ui.navigation.NavigationActivity"
              android:label="NavigationActivity"/>
</navigation>