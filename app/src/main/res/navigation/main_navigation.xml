<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/login_navigation" app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment" android:name="com.example.quiz.presentation.ui.auth.signin.SignInFragment"
              android:label="LoginFragment">
        <action android:id="@+id/signUpAciton" app:destination="@id/signUpFragment"
                app:popUpTo="@+id/loginFragment" app:popUpToInclusive="false"/>
        <argument android:name="argument" app:argType="string" android:defaultValue="default"/>
        <action android:id="@+id/action_loginFragment_to_studentFragment2" app:destination="@+id/studentFragment2"
                app:popUpTo="@+id/login_navigation" app:popUpToInclusive="true"/>
    </fragment>
    <fragment android:id="@+id/signUpFragment"
              android:name="com.example.quiz.presentation.ui.auth.signup.SignUpFragment"
              android:label="SignUpFragment">
        <action android:id="@+id/action_signUpFragment_to_loginFragment2" app:destination="@id/loginFragment"
                app:popUpTo="@+id/login_navigation" app:popUpToInclusive="true"/>
        <action android:id="@+id/action_signUpFragment_to_studentFragment2" app:destination="@id/studentFragment2"/>
        <action android:id="@+id/action_signUpFragment_to_studentFragment22" app:destination="@id/studentFragment2"
                app:popUpTo="@+id/login_navigation" app:popUpToInclusive="true"/>
    </fragment>
    <fragment android:id="@+id/studentFragment2" android:name="com.example.quiz.presentation.ui.main.profile.ProfileFragment"
              android:label="StudentFragment">
        <action android:id="@+id/action_studentFragment2_to_loginFragment" app:destination="@id/loginFragment"
                app:popUpTo="@+id/login_navigation" app:popUpToInclusive="true"/>
    </fragment>
</navigation>